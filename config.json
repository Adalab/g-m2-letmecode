{
  "icons": {
    "src": "_src/assets/icons/*.*",
    "dest": "public/",
    "dist": "docs/"
  },
  "html": {
    "src": "_src/templates/*.html",
    "partials": "_src/templates/partials/",
    "dest": "public/",
    "dist": "docs/"
  },
  "scss": {
    "src": "_src/assets/scss/**/*.scss",
    "dest": "public/assets/css/",
    "dist": "docs/assets/css/"
  },
  "js": {
    "src": ["_src/assets/js/main.js",
       "_src/assets/js/_collapsable.js",
       "_src/assets/js/_palette.js",
       "_src/assets/js/_form.js",
       "_src/assets/js/_default-image.js",
       "_src/assets/js/_input-image.js",
       "_src/assets/js/_buttons.js"],
    "dest": "public/assets/js/",
    "dist": "docs/assets/js/"
  },
  "images": {
    "src": "_src/assets/images/**/*.{gif,jpg,jpeg,JPG,JPEG,png,svg}",
    "dest": "public/assets/images/",
    "dist": "docs/assets/images/"
  },
  "watch": {
    "html": "_src/**/*.html"
  }
}
